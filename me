    <script>
        // Mobile Menu Toggle
        document.querySelector('.mobile-menu').addEventListener('click', function() {
            document.querySelector('nav').classList.toggle('active');
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
                
                // Close mobile menu if open
                document.querySelector('nav').classList.remove('active');
            });
        });

        // Tab functionality
        const tabButtons = document.querySelectorAll('.tab-btn');
        const tabContents = document.querySelectorAll('.tab-content');

        tabButtons.forEach(button => {
            button.addEventListener('click', () => {
                // Remove active class from all buttons and contents
                tabButtons.forEach(btn => btn.classList.remove('active'));
                tabContents.forEach(content => content.classList.remove('active'));
                
                // Add active class to clicked button
                button.classList.add('active');
                
                // Show corresponding content
                const tabId = button.getAttribute('data-tab') + '-tab';
                document.getElementById(tabId).classList.add('active');
            });
        });

        // Tool buttons functionality
        document.querySelectorAll('.tool-btn').forEach(button => {
            button.addEventListener('click', function() {
                alert('This tool would open in a real implementation. In this demo, we\'re showing the UI structure.');
            });
        });

        // Simulate chat functionality
        document.querySelector('.stream-chat button').addEventListener('click', function() {
            const chatInput = document.querySelector('.stream-chat input');
            const chatMessages = document.querySelector('.chat-messages');
            
            if (chatInput.value.trim() !== '') {
                const messageDiv = document.createElement('div');
                messageDiv.textContent = `You: ${chatInput.value}`;
                messageDiv.style.marginBottom = '10px';
                messageDiv.style.padding = '8px';
                messageDiv.style.backgroundColor = '#e3f2fd';
                messageDiv.style.borderRadius = '5px';
                chatMessages.appendChild(messageDiv);
                
                // Scroll to bottom
                chatMessages.scrollTop = chatMessages.scrollHeight;
                
                // Clear input
                chatInput.value = '';
            }
        });

        // Allow chat submission with Enter key
        document.querySelector('.stream-chat input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                document.querySelector('.stream-chat button').click();
            }
        });

